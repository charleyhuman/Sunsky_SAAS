<% provide(:title, 'Sign In') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label "Employee ID" %>
      <%= f.text_field :employee_id %>

      <%= f.label "Password" %>
      <%= f.password_field :password %>

      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>