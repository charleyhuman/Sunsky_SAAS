<main>

<div class="user-tabs">

  <input id="tab1" type="radio" name="tabs" checked>
  <label for="tab1">Profile</label>
    
  <input id="tab2" type="radio" name="tabs">
  <label for="tab2">My Certificates</label>
    
  <input id="tab3" type="radio" name="tabs">
  <label for="tab3">My Classes</label>

  <% if @user.is_supervisor %>
    <input id="tab4" type="radio" name="tabs">
    <label for="tab4">Employee Management</label>

    <input id="tab5" type="radio" name="tabs">
    <label for="tab5">Class Management</label>
  <% end %>
    
  <section id="content1">

<div class="container">          
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th><%= @user_info.name %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>Employee ID</th>
        <th> <%= @user_info.employee_id %> </th>
      </tr>
      <tr>
        <th>SSN</th>
        <th> <%= @user_info.ssn %> </th>
      </tr>
      <tr>
        <th>Phone Number</th>
        <th> <%= @user_info.phone %> </th>
      </tr>
      <tr>
        <th>Division</th>
        <th> <%= @user_info.division %> </th>
      </tr>
    </tbody>
  </table>
</div>

  </section>
    
  <section id="content2">

  <div class="container">          
  <table class="table table-hover sortable">
    <thead>
      <tr>
        <th>Certificate Name</th>
        <th>Issued By</th>
        <th>Issue Date</th>
        <th>Credit hour</th>
      </tr>
    </thead>
    <tbody>
     <% @user_certificates.each do |x| %>
              <tr>
                  <td><%= x.certificate %></td>
                  <td><%= x.issued_by %></td>
                  <td><%= x.date_issued %></td>
                  <td><%= x.credit_hours %></td>
              </tr>
     <% end %>
    </tbody>
  </table>
</div>
 
  </section>

    
  <section id="content3">

      <div class="container">          
  <table class="table table-hover sortable">
    <thead>
      <tr>
        <th>Class Name</th>
        <th>Class Number</th>
        <th>CE Hours</th>
        <th>Grade</th>
      </tr>
    </thead>
    <tbody>
      <% @user_classes.each do |x| %>
          <tr>
              <td><%= @class_names[x.class_number] %></td>
              <td><%= x.class_number %></td>
              <td><%= x.ce_hours %></td>
              <td><%= x.grade %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
  </section>
    
  <section id="content4">

       <div class="container">          
  <table class="table table-hover sortable">
    <thead>
      <tr>
          <th>Name</th>
            <th>ID</th>
            <th>Address</th>
            <th>Phone</th>     
            <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% if @user.is_supervisor%>
            <% @user_info_total.each do |x| %>
              <tr>
                  <td><%= link_to x.name, get_user_path(x) %></td>
                  <td><%= x.employee_id %></td>
                  <td><%= x.address %></td>
                  <td><%= x.phone %></td>
                  <td><%= link_to "Edit" "" %></td>
              </tr>
            <% end %>
          <% end %>
    </tbody>
  </table>
</div>

  </section>

    <section id="content5">

    <form class="container">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-3">
            <button class="btn" style="float: right; position: relative;"><%= link_to "Create Class", url_for(:controller => :class_infos, :action => :new) %></button>
        </div>
    </div>
</form>

       <div class="container">          
  <table class="table table-hover sortable">
    <thead>
      <tr>
            <th>Name</th>
            <th>Class Number</th>
            <th>CE Hours</th>
            <th>Instructor</th>     
            <th>Location</th>
            <th>Action</th>
      </tr>
    </thead>
    <tbody>
  <% if @user.is_supervisor%>
            <% @class_info_total.each do |x| %>
              <tr>
                  <td><%= x.class_name %></td>
                  <td><%= x.class_number %></td>
                  <td><%= x.ce_hours %></td>
                  <td><%= x.lead_instructor %></td>
                  <td><%= x.class_location %></td>
                  <td><button class="btn"><%= link_to "delete", class_info_path(x), :method => 'delete', :confirm => 'Are you sure?' %></button></td>
              </tr>
            <% end %>
            <% end %>
    </tbody>
  </table>
</div>

  </section>

    
</div>
</main>